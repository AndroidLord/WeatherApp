<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    android:padding="3dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background">

        <TextView
            android:id="@+id/Time_TV_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Time"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/Temperature_TV_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Time_TV_Item"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="20"
            android:textColor="@color/white" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/weatherCondition_IV_Item"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_below="@id/Temperature_TV_Item"
            android:src="@drawable/ic_search"
            android:layout_centerHorizontal="true"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/windSpeed_TV_Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weatherCondition_IV_Item"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="13"
            android:textColor="@color/white" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>